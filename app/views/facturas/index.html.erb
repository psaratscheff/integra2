<p id="notice"><%= notice %></p>

<h1>Listing Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Proveedor</th>
      <th>Cliente</th>
      <th>Valortotal</th>
      <th>Estadopago</th>
      <th>Idoc</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura._id %></td>
        <td><%= factura.proveedor %></td>
        <td><%= factura.cliente %></td>
        <td><%= factura.valorTotal %></td>
        <td><%= factura.estadoPago %></td>
        <td><%= factura.idoc %></td>
        <td><%= factura.comentario %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

