<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Sku</th>
      <th>Descripcion</th>
      <th>Tipo</th>
      <th>Grupo</th>
      <th>Unidades</th>
      <th>Costo unitario</th>
      <th>Lote</th>
      <th>Tiempo medio</th>
      <th>Precio unitario</th>
      <th>Sku1</th>
      <th>Sku2</th>
      <th>Sku3</th>
      <th>Sku4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.Sku %></td>
        <td><%= item.Descripcion %></td>
        <td><%= item.Tipo %></td>
        <td><%= item.Grupo %></td>
        <td><%= item.Unidades %></td>
        <td><%= item.Costo_Unitario %></td>
        <td><%= item.Lote %></td>
        <td><%= item.Tiempo_Medio %></td>
        <td><%= item.Precio_Unitario %></td>
        <td><%= item.Sku1 %></td>
        <td><%= item.Sku2 %></td>
        <td><%= item.Sku3 %></td>
        <td><%= item.Sku4 %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

